<UserControl x:Class="CodeAlong.WPF.View.ReferencesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewsections="clr-namespace:CodeAlong.WPF.View.Sections"
             xmlns:vmsections="clr-namespace:CodeAlong.WPF.ViewModel.Sections"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <UserControl.Resources>
        <DataTemplate x:Key="CustomerDataTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Title,ValidatesOnNotifyDataErrors=False}" FontWeight="Bold"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmsections:DecoratorViewModel}">
            <viewsections:DecoratorView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmsections:FactoryPatternViewModel}">
            <viewsections:FactoryPatternView/>
        </DataTemplate>
    </UserControl.Resources>
    <!-- Volume/Topic View -->
    <Grid KeyDown="MainItem_KeyDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Items list -->
        <Grid Grid.Column="0"
              Width="400"
              Background="#AAA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Button Margin="10" Width="75"
                            Command="{Binding AddCommand}"
                            Click="AddNewItem_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/add.png" Height="18" Margin="0 0 5 0"/>
                            <TextBlock Text="Add"/>
                        </StackPanel>
                    </Button>
                    <Button Content="Delete" Width="75" Margin="0 10 10 10"  Command="{Binding DeleteCommand}" />
                    <Button HorizontalAlignment="Left" Content="_JSON" Width="75" Margin="0 10 10 10" Click="ViewJson_Click" ToolTip="Open JSON File" />
                </StackPanel>
                <ComboBox ItemsSource="{Binding Path=ListViewItems}"
                      SelectedItem="{Binding SelectedItem,Mode=TwoWay}"
                      ItemTemplate="{StaticResource CustomerDataTemplate}"
                      Grid.Row="1" Margin="10 0 10 10">
                </ComboBox>
                
                <!-- item detail -->
                <GroupBox Header="Reference" Margin="10 0" Visibility="{Binding IsItemSelected,Converter={StaticResource BooleanToVisibilityConv}}">
                    <StackPanel Margin="10 0">
                        <StackPanel>
                            <Label HorizontalAlignment="Left" Width="100">Title:</Label>
                            <TextBox Width="500" Text="{Binding SelectedItem.Title, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Name="Title"/>
                            <StackPanel Margin="0 10">
                                <Label HorizontalAlignment="Left" Width="100">Description:</Label>
                                <TextBox Width="500" Text="{Binding SelectedItem.Description, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel>
                            <Button Content="Save" Width="75" Margin="0 10 10 10"  Command="{Binding SaveCommand}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <GroupBox Grid.Row="1"
                      Margin="10"
                      Header="Sections"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
                <StackPanel Margin="10">
                    <Button Width="200" FontSize="24" Command="{Binding SelectSectionCommand}" Name="ButtonDecorator"
                    CommandParameter="{Binding DecoratorPattern}" Click="ButtonDecorator_Click">_Decorator Pattern</Button>
                    <Button Margin="0 10" Width="200" FontSize="24" Command="{Binding SelectSectionCommand}" Name="ButtonFactoryPattern"
                    CommandParameter="{Binding FactoryPattern}" Click="ButtonFactoryPattern_Click">_Factory Pattern</Button>
                </StackPanel>
            </GroupBox>
        </Grid>
        <!-- section detail -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="0 0 10 0">
            <ContentControl Content="{Binding SelectedViewModel}"/>
        </ScrollViewer>
    </Grid>
</UserControl>
